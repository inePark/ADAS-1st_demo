    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/RelativeLayout01"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:layout_gravity="center"
    android:background="@drawable/default_bg2"
    >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/music_play_txt" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <ImageButton
                        android:id="@+id/video1"
                        android:layout_width="280dip"
                        android:layout_height="220dip"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="20dip"
                        android:layout_marginRight="20dip"
                        android:layout_marginStart="36dp"
                        android:layout_weight="0.12"
                        android:color="@color/colorBlue"
                        android:scaleType="fitXY"
                        android:src="@drawable/twice" />

                    <ImageButton
                        android:id="@+id/video2"
                        android:layout_width="280dip"
                        android:layout_height="220dip"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginRight="20dip"
                        android:layout_weight="0.30"
                        android:scaleType="fitXY"
                        android:src="@drawable/apink" />

                    <ImageButton
                        android:id="@+id/video3"
                        android:layout_width="280dip"
                        android:layout_height="220dip"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginEnd="42dp"
                        android:layout_marginRight="20dip"
                        android:layout_weight="0.47"
                        android:scaleType="fitXY"
                        android:src="@drawable/gfriend" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="55dip"
                        android:layout_weight="0.55"
                        android:gravity="center"
                        android:text="TWICE \nSIGNAL"
                        android:textColor="#FFFFFF"
                        android:layout_marginStart="136dp"
                        android:id="@+id/textView9"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0.74"
                        android:gravity="center"
                        android:text="APINK \nFIVE"
                        android:textColor="#FFFFFF"
                        android:layout_alignBaseline="@+id/textView9"
                        android:layout_alignBottom="@+id/textView9"
                        android:layout_centerHorizontal="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0.60"
                        android:gravity="center"
                        android:text="GIRL FRIEND \nLOVE WHISPER"
                        android:textColor="#FFFFFF"
                        android:layout_marginEnd="107dp"
                        android:layout_alignBaseline="@+id/textView5"
                        android:layout_alignBottom="@+id/textView5"
                        android:layout_alignParentEnd="true" />
                </RelativeLayout>
            </LinearLayout>



        </ScrollView>
    </RelativeLayout>